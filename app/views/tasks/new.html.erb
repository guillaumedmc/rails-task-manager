<div class="from-total">
  <h1>Add a new task</h1>

  <%= form_for(@task) do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :detail %>
      <%= f.text_field :detail, class: 'form-control' %>
    </div>

<!--     <div class="form-group">
      <%= f.label :completed %>
      <%= f.check_box :completed, class: 'form-control' %>
    </div> -->

    <%= f.submit class: 'btn btn-primary' %>
  <% end %>
</div>


<div class="btn">
  <%= link_to 'Back to list', tasks_index_path %>
</div>
